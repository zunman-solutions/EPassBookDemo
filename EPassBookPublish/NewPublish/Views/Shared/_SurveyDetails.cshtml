@model IEnumerable<EPassBook.Models.SurveyDetailsModel>

@if (Model != null)
{
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4>Survey Details</h4>
                    </div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="surveyDetails" class="table table-bordered table-striped" style="">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Name of the Surveyer</th>
                                        <th>Role</th>
                                        <th>Mobile</th>
                                        <th>Physical Progress</th>
                                        <th>Instruction/Suggestion</th>
                                        <th>Signature</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var items in Model)
                                    {
                                        <tr>
                                            <td>@items.CreatedDate.Value.ToString("dd MMM yyyy")</td>
                                            <td>@items.UserName</td>
                                            <th>@items.Role</th>
                                            <td>@items.MobileNo</td>
                                            <td>@items.Physical_Progress</td>
                                            <td>@items.Comments</td>
                                            <td>@Html.CheckBoxFor(m => items.Sign, new { @disabled = "disabled" })</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#surveyDetails').DataTable();
    });
</script>

