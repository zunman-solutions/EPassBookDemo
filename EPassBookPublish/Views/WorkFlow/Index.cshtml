@model IEnumerable<EPassBook.Models.InstallmentListView>

@{
    ViewBag.Title = "Index";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Beneficiary Request
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Beneficiary Request Box</a></li>
            @*<li class="active">Dashboard</li>*@
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        @*<h3 class="box-title">Beneficiary Request</h3>*@
                    </div>
                    <div class="box-body">
                        <table id="Beneficiary" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th class="hidden-sm hidden-xs hidden-md" style="display:none">
                                        @Html.DisplayNameFor(model => model.BeneficiaryId)
                                    </th>
                                    <th >
                                        @Html.DisplayNameFor(model => model.BeneficairyName)
                                    </th>
                                    <th class="hidden-sm hidden-xs hidden-md">
                                        @Html.DisplayNameFor(model => model.MobileNo)
                                    </th>
                                    <th class="hidden-sm hidden-xs hidden-md">
                                        @Html.DisplayNameFor(model => model.CreatedDate)
                                    </th>
                                    <th class="hidden-sm hidden-xs hidden-md">  
                                        @Html.DisplayNameFor(model => model.PlanYear)
                                    </th>  
                                    <th>
                                        @Html.DisplayNameFor(model => model.InstallmentNo)
                                    </th>                                    
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="hidden-sm hidden-xs hidden-md" style="display:none"> 
                                            @Html.DisplayFor(modelItem => item.BeneficiaryId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BeneficairyName)
                                        </td>
                                        <td class="hidden-sm hidden-xs hidden-md">
                                            @Html.DisplayFor(modelItem => item.MobileNo)
                                        </td>
                                        <td class="hidden-xs">
                                            @Html.DisplayFor(modelItem => item.CreatedDate)
                                        </td>
                                        <td class="hidden-sm hidden-xs hidden-md">
                                            @Html.DisplayFor(modelItem => item.PlanYear)
                                        </td>                                       
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InstallmentNo)
                                        </td>                                       
                                        <td>
                                            @Html.ActionLink("View Benificiary", "Workflow", "WorkFlow", new { installmentId = item.InstallmentId }, htmlAttributes: new { @class = "btn btn-primary" })

                                        </td>
                                    </tr>
                                }
                            </tbody>
                            </table>
                    </div>
                </div>
                </div>
        </div>

</section>
</div>
@*}*@


<script type="text/javascript">
    $(document).ready(function () {
        $('#Beneficiary').DataTable();
    });
</script>
