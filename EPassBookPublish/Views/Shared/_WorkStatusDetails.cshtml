@model IEnumerable<EPassBook.Models.WorkStatusDetailsViewModel>


@if (Model != null)
{
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4>Work Status</h4>
                    </div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="workStatusDetails" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Installment</th>
                                        <th class="hidden-sm hidden-xs hidden-md">Work Status</th>
                                        <th>State</th>
                                        <th>Central</th>
                                        <th class="hidden-sm hidden-xs hidden-md">Beneficiary</th>
                                        <th>ULB</th>
                                        <th>Total Amount(in Rs)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Installment)</td>
                                            <td class="hidden-sm hidden-xs hidden-md">@Html.DisplayFor(modelItem => item.LevelType)</td>
                                            <td>@Html.DisplayFor(modelItem => item.StateAmount)</td>
                                            <td>@Html.DisplayFor(modelItem => item.CenterAmount)</td>
                                            <td class="hidden-sm hidden-xs hidden-md">@Html.DisplayFor(modelItem => item.BeneficiaryAmount)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ULBAmount)</td>
                                            <td>@Html.DisplayFor(modelItem => item.TotalAmount)</td>
                                        </tr>

                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>Total</td>
                                        <td>@ViewBag.GrandTotal</td>
                                    </tr>
                                    <tr>
                                        <td>Remaining amount to be contributed by the beneficiary.</td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </section>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#workStatusDetails').DataTable();
    });
</script>

